
import java.util.Arrays;
import java.util.Scanner;

 public class temp{
  public static void main(String[] args) {
    Scanner sc=new Scanner(System.in);
    int n=sc.nextInt();
    boolean ans = check(n);
    System.out.println(ans );



    
  }
    static boolean check(int n) {
      if(n%2==0){
        return true;
      }
      else{
        return false;
      }
     
 }
 }

  
